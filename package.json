{
  "name": "todolist-challenge",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "author": "Felipe Luiz <felipebluiz@gmail.com>",
  "license": "MIT",
  "lint-staged": {
    "*.(gql|css|scss|json|yml|md)": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@todolist-challenge/eslint-config": "*",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2"
  }
}
